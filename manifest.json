{
  "manifest_version": 2,
  "name": "Gitviwr",
  "description": "This extension is a mini socket.io github profile viewer client",
  "version": "0.1.0",

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "/src/logo.png"
},


"permissions": [
    "webRequest",
    "webNavigation",
    "https://*.github.com/*",
    "tabs",
    "http://*/*",
    "https://*/*"
],


  "content_scripts": [
    {
      "matches": ["https://*.github.com/*"],
      "js": ["/assets/socket.io.js","content.js"]
    }
  ],

"background": {
  "scripts": [
    "/src/background/background.js",
    "/assets/socket.io.js"
  ],
  "persistent": true
},
"permissions": [
    "activeTab"
  ]

}
